<main>
  <p id="notice"><%= flash[:notice] %></p>
  <div class="container px-5 px-sm-0 mx-15">

      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <h2>Editing Comment</h2>
        <% if @comment.errors.any? %>
          <h3><%= @comment.errors.count %>errors prohibited this obj from being saved:</h>
          <ul>
          <% @comment.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        <% end %>
        <%= form_with model:@comment, local:true do |f| %>
          <div class="form-group">
            <label for="comment">Comment Text</label>
            <%= f.text_field :title, autofocus: true, class: "form-control name" %>
          </div>

          <div class="form-group">
            <%= f.submit "Update Comment", class: "btn btn-secondary" %>
          </div>
        <% end %>
        <p> 
          <%= link_to "Back", games_path %>
        </p>
      </div>
  </div>
</main>